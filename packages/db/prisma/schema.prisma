generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String    @id   @default(uuid())
  username          String
  profilePicture    String?
}

model Model {
  id           String    @id   @default(uuid())
  name         String
  type         ModelTypeEnum
  age          Int
  ethnicity    EthnicityEnum
  eyeColour    eyeColourEnum
  bald         Boolean
  imagesUrl    String
}

model TrainingModel {
  id           String    @id   @default(uuid())
  imagesUrl    String
  modelId      String
}

model OutputImage {
  id                String    @id   @default(uuid())
  imageUrl          String
  modelId           String
}

model Packs {
  id                String    @id   @default(uuid())
  name              String
}

model PackPrompts {
  id                String    @id   @default(uuid())
  prompt            String
  packId            String
}

enum ModelTypeEnum {
  Man
  Woman
  Couple
  Others
}

enum EthnicityEnum {
  Black
  White
  AsianAmerican
  EastAsian
  SouthEastAsian
  SouthAsian
  MiddleEastern
  Pacific
  Hispanic
}

enum eyeColourEnum {
  Brown
  Blue
  Hazel
  Gray
  Green
}
